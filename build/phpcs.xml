<?xml version="1.0"?>
<ruleset name="WordPress">
    <description>WordPress Coding Standard.</description>
    <rule ref="WordPress">
      <exclude name="WordPress.XSS.EscapeOutput"/>
    </rule>
    <rule ref="WordPress.Variables.GlobalVariables">
        <exclude-pattern>page-templates/archive.php</exclude-pattern>
        <exclude-pattern>inc/comments.php</exclude-pattern>
        <exclude-pattern>inc/template-tags.php</exclude-pattern>
    </rule>
    <rule ref="WordPress.VIP.SlowDBQuery">
      <exclude-pattern>inc/related.php</exclude-pattern>
    </rule>

</ruleset>
