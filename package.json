{
  "name": "wp-theme-makotokw",
  "description": "makotokw theme for WordPress",
  "license": "GPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/makotokw/wp-theme-makotokw"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "7.12.5",
    "@fortawesome/fontawesome-free": "5.15.1",
    "core-js": "3.8.1",
    "google-code-prettify": "1.0.5",
    "headroom.js": "0.12.0",
    "smooth-scroll": "16.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "autoprefixer": "^10.1.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "expose-loader": "^1.0.3",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^1.3.2",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-loader": "^4.1.0",
    "resolve-url-loader": "^3.1.2",
    "sass-loader": "^10.1.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0",
    "webpack-notifier": "^1.12.0"
  },
  "scripts": {
    "lint:eslint": "eslint src",
    "lint:phpcs": "phpcs --colors -s --report-width=1024 --standard=phpcs.xml *.php ./**/*.php",
    "phpcbf": "phpcbf --standard=phpcs.xml *.php ./**/*.php",
    "build": "npm-run-all webpack:dev",
    "webpack:dev": "webpack --mode development",
    "webpack:devWatch": "webpack --mode development --watch",
    "lang:1st-pot": "xgettext --from-code=UTF-8 -k__ -k_e -L PHP -o ./languages/messages.pot ./*.php ./*/*.php --package-name=makotokw --package-version=1.0 --msgid-bugs-address=makoto.kw@gmail.com && msgmerge --update ./languages/ja.po ./languages/messages.pot --backup=off",
    "lang:2nd-mo": "msgfmt -o ./languages/ja.mo ./languages/ja.po"
  }
}
